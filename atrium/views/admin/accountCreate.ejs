<!DOCTYPE html>
<html>
<head>
    <%- include('shared/head') %>
</head>
<body>
<div class="pageWrapper">
    <%- include('shared/navbar') %>

    <div class="contentWrapper2" action="/api/admin/accounts/create" method="post">
        <h1 class="PageTitle">Create Account</h1>

        <form class="verticalContainer" style="margin-top: 22px;" action="/api/admin/accounts/create" method="post">

            <div class="formGroup">
                <%- include('shared/errorMessage') %>
            </div>

            <div class="formGroup hide">
                <label class="form-label" for="Callback">Callback</label>
                <input name="callback" id="Callback" type="text" placeholder="Callback" class="form-control" required value="/admin/accounts/create">
            </div>

            <div class="formGroup hide">
                <label class="form-label" for="Callback">Callback Success</label>
                <input name="callbackSuccess" id="Callback" type="text" placeholder="Callback" class="form-control" required value="/admin/accounts">
            </div>

            <div class="formGroup">
                <label class="form-label" for="UsernameInput">Username</label>
                <input name="username" id="UsernameInput" type="text" placeholder="Username" class="form-control" required autocomplete="on">
            </div>

            <div class="formGroup">
                <label class="form-label" for="DisplaynameInput">Display Name</label>
                <input name="displayName" id="DisplaynameInput" type="text" placeholder="Display Name" class="form-control" required>
            </div>

            <div class="formGroup">
                <label class="form-label" for="PasswordInput">Password</label>
                <input name="password" id="PasswordInput" type="password" placeholder="Password" class="form-control" required autocomplete="off">
            </div>

            <div class="formGroup">
                <label class="form-label" for="ProfilePictureInput">Profile Picture</label>
                <input name="profilePicture" id="ProfilePictureInput" type="text" placeholder="Image Name" class="form-control" value="DefaultImage.png">
            </div>

            <div class="formGroup">
                <label class="form-label" for="JuniorInput">Is Junior</label>
                <select name="isJunior" id="JuniorInput" class="form-select">
                    <option selected value="false">False</option>
                    <option value="true">True</option>
                </select>
            </div>

            <div class="formGroup">
                <label class="form-label" for="EmailInput">Email</label>
                <input name="email" id="EmailInput" type="text" placeholder="Email" class="form-control" value="null">
            </div>

            <div class="formGroup">
                <label class="form-label" for="VerifiedEmail">Verified Email</label>
                <select name="verifiedEmail" id="VerifiedEmail" class="form-select">
                    <option selected value="false">False</option>
                    <option value="true">True</option>
                </select>
            </div>

            <div class="formGroup">
                <button id="SubmitDataBtn" class="btn btn-success">Submit</button>
            </div>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/cdn/css/style.css">
    <link rel="stylesheet" href="/cdn/css/fonts.css">
    <title>Atrium</title>
</head>
<body>
    <%- include('shared/navbar') %>

    <div class="verticalContainer">
        <img src="/cdn/img/AtriumLogo.png" width="325">
    </div>
    <hr style="width: 400px;">

    <div class="verticalContainer">

        <% if(errorMessage !== undefined) { %>
            <div class="verticalContainer errorLoginMessage">
                <h2>Login Failed</h2>
                <p><%- errorMessage %></p>
            </div>
        <% } %>

        <form action="/api/auth/v1/login" method="post" class="formGroup" style="margin-top: 10px; width: 500px">

            <h3 id="LoginFailedText" class="LoginFailedText"></h3>
            <div class="formGroup">
                <label for="username" >Username</label>
                <input id="username" name="username" placeholder="Username">
            </div>

            <div class="formGroup">
                <label for="password" >Password</label>
                <input id="password" name="password" type="password" placeholder="Password">
            </div>

            <div class="formGroup" style="display: none;">
                <label for="callback">Callback URL</label>
                <input id="callback" name="callback" placeholder="Callback" value="/">
            </div>

            <button type="submit">Login</button>
        </form>
    </div>
</body>
</html>